<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_backgroundianhac"
    tools:context=".Activity.DiaNhacActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbardia_nhac"
        android:layout_width="match_parent"
        app:popupTheme="@style/Theme.Design.NoActionBar"
        android:layout_height="?attr/actionBarSize">
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:id="@+id/reladianhac"
        android:orientation="vertical"
       android:gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="#000000"
            android:id="@+id/imageviewCircle"
            android:src="@drawable/ic_launcher_background"
            android:layout_width="350dp"
            android:layout_height="350dp">

        </de.hdodenhof.circleimageview.CircleImageView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"

                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="00:00"
                    android:gravity="center"
                    android:layout_weight="0.5"
                    android:id="@+id/textviewtimesong"
                    android:textColor="#ffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <SeekBar
                    android:id="@+id/seekbarsong"
                    android:layout_weight="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:gravity="center"
                    android:text="00:00"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_weight="0.5"
                    android:id="@+id/textviewtotaltimesong"
                    android:textColor="#ffff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:src="@drawable/iconsuffle"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonsuffle"
                    android:layout_marginRight="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
                <ImageButton
                    android:src="@drawable/iconpreview"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonpreview"
                    android:layout_marginRight="15dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <ImageButton
                    android:src="@drawable/iconplay"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonplay"
                    android:layout_marginRight="15dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"/>
                <ImageButton
                    android:src="@drawable/iconnext"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonnext"
                    android:layout_marginRight="15dp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <ImageButton
                    android:src="@drawable/iconrepeat"
                    android:scaleType="fitXY"
                    android:background="@null"
                    android:id="@+id/imagebuttonrepeat"
                    android:layout_marginRight="15dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>